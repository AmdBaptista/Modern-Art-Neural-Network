<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.amdbaptista.ui.GameSettingsController">
    <children>
        <Label text="Game Settings" style="-fx-font-size: 20px;" />
        <Label text="Amount of players:" />
        <Spinner fx:id="playerCountSpinner" />
        <Label text="Amount of starting gold:" fx:id="startingGoldLabel" />
        <TextField fx:id="startingGoldField" />
        <Label text="Altered Deck:" fx:id="alteredDeckLabel" />
        <CheckBox fx:id="alteredDeckCheckBox" text="Yes" />
        <Button text="Save Settings" onAction="#saveSettings" />
        <Button text="Back" onAction="#goBack" />
    </children>
</VBox>


